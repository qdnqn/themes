{{!< default}}

<main class="site-main">
    {{#get "posts" limit=100 order="published_at asc"}}
         {{#foreach posts limit="1"}}
            {{#post}}

            <article class="gh-article {{post_class}}">
                <div class="gh-content gh-canvas">
                    {{content}}
                </div>

            </article>

            {{#if comments}}
                <div class="gh-comments gh-canvas">
                    {{comments}}
                </div>
            {{/if}}
            {{/post}}
         {{/foreach}}
    {{/get}}
</main>

